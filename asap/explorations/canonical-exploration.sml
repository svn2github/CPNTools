(* signature for canonicalisation functions *)
signature CANONICALISATION = sig
    
    type state
    type event

    (* canonicalisation of states *)
    val canonicalise_state : state -> state

    (* canonicalisation of event *)
    val canonicalise_event : event -> event

end

(* canonnical exploration which wraps a trace exploration and ensures that 
   canonicalisation of states and event takes place first *)
functor CanonicalExploration(
structure Canonicalisation : CANONICALISATION
structure Exploration      : TRACE_EXPLORATION
sharing type Canonicalisation.state = Exploration.state and
        type Canonicalisation.event = Exploration.event) : TRACE_EXPLORATION =
struct

    type state = Exploration.state
    type event = Exploration.event

    type 'a storage = 'a Exploration.storage
    type id = Exploration.id

    fun explore arc_transform node_transform hooks storage init = 
    let
	(* arc transformation with canonicalisation first *)
        fun arc_transform_canon (s,es) = List.map Canonicalisation.canonicalise_event es

	(* node transformation with canonicalisation first *)
        fun node_transform_canon (s,es) = (Canonicalisation.canonicalise_state s,es)
    in
	Exploration.explore arc_transform_canon node_transform_canon hooks storage init
    end;

end 
