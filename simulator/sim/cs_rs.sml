(* File: cs_rs.sml
 *
 * Random-set over colour-sets, used to bind unconstrained variables.
 *)

structure CPN'RS: sig
    type 'a rs;
    val create : 'a CPN'MS.ms -> 'a rs;
    val init_res : 'a rs -> unit;
    val random_res : exn -> 'a rs -> 'a;
end = struct
local  
    open Array;
in
    type 'a rs = {last: int ref, 
		  set: 'a array}

    fun create ms =
	{last = ref (CPN'MS.size(ms)-1), 
	 set = fromList ms}
    
    fun init_res {last, set} = last:= (length set)-1;

    fun random_res exn {last= ref(~1),...} = raise exn
      | random_res _ {set,last} = let
	val draw = CPN'Random.int(!last+1)
	val item = sub(set,draw)
    in
	(update(set,draw,sub(set,!last));
	 update(set,!last,item);
	 dec last;
	 item)
    end
end (* local *)
end;
