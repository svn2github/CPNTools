(* File: options-sig.sml
 *
 * Interface description for simulation and initialization options.
 *)

signature CPN'OPTIONS = sig

    structure Time: CPN'TIME

    datatype stop_crits =
	until_step of IntInf.int
      | additional_steps of IntInf.int
      | until_time of Time.time
      | additional_time of Time.time

    val stop_crits: stop_crits list ref

    val pause_before_step: bool ref
    val pause_after_step: bool ref
    val pause_show_tokens: bool ref
    val pause_cont_after: int option ref

    val report_transitions: bool ref
    val report_bindings: bool ref (* bindings only reported with transitions *)
    val report_function: (CPN'Id.id * int -> string) option ref

    val show_marking: bool ref
    val show_enabling: bool ref

    val fair_be : bool ref
    val global_fair : bool ref

    val seed: int option ref

    val reset_ran_gen: bool ref
    val reset_ref_vars: bool ref

    val set_sim : {stop_crit: string * string * string * string,
		   pause    : bool * bool * bool * string,
		   report   : bool * bool * string,
		   show     : bool * bool,
		   fairness : bool * bool
               } -> unit

    val set_init: {seed     : string,
		   reset    : bool * bool} -> unit

    val flush_files: bool ref
end
